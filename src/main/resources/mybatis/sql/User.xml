<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daou.pd.user.mod.UserMapper">

	<select id="selectUser" parameterType="userVO"
		resultType="Integer">
		select count(*) from employee
		where e_id = #{e_id}
		and e_pw =
		#{e_pw}
		and e_type = 2
	</select>

	<select id="userIdCheck" parameterType="userVO"
		resultType="Integer">
		select count(*) from employee
		where e_id = #{e_id}
	</select>

	<select id="memberView" parameterType="userVO"
		resultType="userVO">
		select *
		from employee
		where e_id = #{e_id}
	</select>

	<select id="deptList" resultType="deptVO">
		select dept_no, dept_name
		from
		dept
	</select>

	<update id="updateMember" parameterType="userVO">
		update employee
		set
		e_name = #{e_name},
		e_dep = #{e_dep},
		e_tel = #{e_tel}
		where e_id =
		#{e_id}
	</update>

</mapper>	 